{
  "version": 2,
  "buildCommand": "echo $GOOGLE_CREDENTIALS | base64 -d > google-credentials.json",
  "outputDirectory": "dist",
  "framework": "vite",
  "builds": [
    {
      "src": "server/api/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/api/$1"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "/dist/assets/$1"
    },
    {
      "src": "/(.*)\\.(.+)",
      "dest": "/dist/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ],
  "env": {
    "GOOGLE_APPLICATION_CREDENTIALS": "/var/task/google-credentials.json"
  }
} 