{
  "version": 2,
  "builds": [
    {
      "src": "server/api/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ],
  "env": {
    "GOOGLE_APPLICATION_CREDENTIALS": "/var/task/google-credentials.json"
  },
  "buildCommand": "echo $GOOGLE_CREDENTIALS | base64 -d > google-credentials.json && npm run build"
} 